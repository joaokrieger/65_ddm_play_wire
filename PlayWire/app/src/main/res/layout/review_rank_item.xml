<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#141517"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvUsernameComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call of Duty"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#36373A"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="10 anÃ¡lise(s)"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_feed_item"
                android:minWidth="250dp"
                android:padding="8dp"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/tvRankPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bom"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
